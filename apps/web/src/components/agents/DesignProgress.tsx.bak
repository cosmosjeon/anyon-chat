"use client";

import { useQuery } from "@tantml:query";
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "@/components/ui/card";
import { Progress } from "@/components/ui/progress";
import { Badge } from "@/components/ui/badge";
import { Loader2, CheckCircle2, AlertCircle } from "lucide-react";

interface DesignProgressProps {
  jobId: string;
}

interface DesignStatus {
  jobId: string;
  status: string;
  currentPhase: number;
  phaseName: string;
  progressPercent: number;
  screenCount?: number;
  completedScreens?: number;
  estimatedTimeRemaining?: number;
  lastUpdated: string;
  errorMessage?: string;
}

const PHASES = [
  { num: 1, name: "extract_screens", label: "Extracting Screens" },
  { num: 2, name: "generate_options", label: "Generating Options" },
  { num: 3, name: "create_ascii_ui", label: "Creating ASCII UI" },
  { num: 4, name: "build_design_system", label: "Building Design System" },
  { num: 5, name: "validate_code", label: "Validating Code" },
  { num: 6, name: "generate_documents", label: "Generating Documents" },
];

export function DesignProgress({ jobId }: DesignProgressProps) {
  const { data, isLoading, error } = useQuery<DesignStatus>({
    queryKey: ["designStatus", jobId],
    queryFn: async () => {
      const response = await fetch(`/api/design/status/${jobId}`);
      if (!response.ok) throw new Error("Failed to fetch status");
      return response.json();
    },
    refetchInterval: (data) => {
      // Stop polling if completed or failed
      if (data?.status === "completed" || data?.status === "failed") {
        return false;
      }
      return 2000; // Poll every 2 seconds
    },
  });

  if (isLoading) {
    return (
      <Card>
        <CardContent className="flex items-center justify-center p-8">
          <Loader2 className="h-8 w-8 animate-spin" />
        </CardContent>
      </Card>
    );
  }

  if (error) {
    return (
      <Card>
        <CardContent className="p-8">
          <div className="flex items-center gap-2 text-red-500">
            <AlertCircle className="h-5 w-5" />
            <p>Failed to load design progress</p>
          </div>
        </CardContent>
      </Card>
    );
  }

  if (!data) return null;

  const formatTimeRemaining = (seconds?: number) => {
    if (!seconds) return "Calculating...";
    const minutes = Math.floor(seconds / 60);
    if (minutes < 1) return "Less than 1 minute";
    if (minutes === 1) return "1 minute";
    return `${minutes} minutes`;
  };

  return (
    <div className="space-y-4">
      <Card>
        <CardHeader>
          <div className="flex items-center justify-between">
            <CardTitle>Design Agent Progress</CardTitle>
            <Badge
              variant={
                data.status === "completed"
                  ? "default"
                  : data.status === "failed"
                    ? "destructive"
                    : "outline"
              }
            >
              {data.status.toUpperCase()}
            </Badge>
          </div>
          <CardDescription>
            {data.status === "running" && `Phase ${data.currentPhase} of 6`}
          </CardDescription>
        </CardHeader>
        <CardContent className="space-y-4">
          {/* Overall Progress */}
          <div className="space-y-2">
            <div className="flex items-center justify-between text-sm">
              <span className="font-medium">Overall Progress</span>
              <span className="text-muted-foreground">{data.progressPercent}%</span>
            </div>
            <Progress value={data.progressPercent} className="h-3" />
          </div>

          {/* Current Phase */}
          {data.status === "running" && (
            <div className="flex items-center gap-2 p-3 bg-blue-50 dark:bg-blue-950 rounded-lg">
              <Loader2 className="h-4 w-4 animate-spin text-blue-500" />
              <div>
                <p className="font-medium text-sm">
                  {PHASES.find((p) => p.num === data.currentPhase)?.label || data.phaseName}
                </p>
                {data.estimatedTimeRemaining && (
                  <p className="text-xs text-muted-foreground">
                    Estimated time remaining: {formatTimeRemaining(data.estimatedTimeRemaining)}
                  </p>
                )}
              </div>
            </div>
          )}

          {/* Screen Progress */}
          {data.screenCount && data.screenCount > 0 && (
            <div className="flex items-center justify-between text-sm">
              <span className="text-muted-foreground">Screens</span>
              <span className="font-medium">
                {data.completedScreens || 0} / {data.screenCount}
              </span>
            </div>
          )}

          {/* Error Message */}
          {data.errorMessage && (
            <div className="flex items-start gap-2 p-3 bg-red-50 dark:bg-red-950 rounded-lg">
              <AlertCircle className="h-4 w-4 text-red-500 mt-0.5" />
              <div>
                <p className="font-medium text-sm text-red-700 dark:text-red-400">Error</p>
                <p className="text-xs text-red-600 dark:text-red-500">{data.errorMessage}</p>
              </div>
            </div>
          )}

          {/* Success Message */}
          {data.status === "completed" && (
            <div className="flex items-center gap-2 p-3 bg-green-50 dark:bg-green-950 rounded-lg">
              <CheckCircle2 className="h-4 w-4 text-green-500" />
              <p className="font-medium text-sm text-green-700 dark:text-green-400">
                Design complete! Documents are ready.
              </p>
            </div>
          )}
        </CardContent>
      </Card>

      {/* Phase Timeline */}
      <Card>
        <CardHeader>
          <CardTitle>Phase Timeline</CardTitle>
        </CardHeader>
        <CardContent>
          <div className="space-y-3">
            {PHASES.map((phase) => {
              const isCompleted = phase.num < data.currentPhase;
              const isCurrent = phase.num === data.currentPhase && data.status === "running";
              const _isPending = phase.num > data.currentPhase;

              return (
                <div key={phase.num} className="flex items-center gap-3">
                  <div
                    className={`flex-shrink-0 w-8 h-8 rounded-full flex items-center justify-center text-sm font-medium ${
                      isCompleted
                        ? "bg-green-500 text-white"
                        : isCurrent
                          ? "bg-blue-500 text-white"
                          : "bg-gray-200 text-gray-500"
                    }`}
                  >
                    {isCompleted ? <CheckCircle2 className="h-4 w-4" /> : phase.num}
                  </div>
                  <div className="flex-1">
                    <p
                      className={`text-sm font-medium ${
                        isCurrent ? "text-blue-600 dark:text-blue-400" : ""
                      }`}
                    >
                      {phase.label}
                    </p>
                  </div>
                  {isCurrent && <Loader2 className="h-4 w-4 animate-spin text-blue-500" />}
                  {isCompleted && <CheckCircle2 className="h-4 w-4 text-green-500" />}
                </div>
              );
            })}
          </div>
        </CardContent>
      </Card>
    </div>
  );
}
